//Prisma IMPLICIT many 2 many relationship --> prisma manages the junction table under the hood
// --> you get ease of use but cant add extra fields to the junction table
//Prisma EXPLICIT many 2 many relationship --> you manage the junction table yourself

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Site {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  language String
  title    String
  subtitle String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  object   String @unique
  language String
  name     String @unique
  pageContent String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  telegram String
  message  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}